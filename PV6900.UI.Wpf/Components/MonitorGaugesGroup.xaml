<Grid x:Class="PV6900.UI.Wpf.Components.MonitorGaugesGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PV6900.UI.Wpf.Components"
             xmlns:controls="clr-namespace:PV6900.UI.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <StackPanel  VerticalAlignment="Center">
        <controls:MonitorGauge Header="Setting Volta" Value="{Binding SettingVolta,StringFormat={}{0:N2}}"/>
        <controls:MonitorGauge Header="Volta" Value="{Binding Volta,StringFormat={}{0:N2}}"/>
        <controls:MonitorGauge Header="Setting Ampere"  Value="{Binding SettingAmpere,StringFormat={}{0:N2}}"/>
        <controls:MonitorGauge Header="Ampere" Value="{Binding Ampere,StringFormat={}{0:N2}}"/>
    </StackPanel>
</Grid>
